{
  "name": "@oceanprotocol/pleuston",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "copy": "./scripts/copy-bigchaindb-drivers.sh",
    "lint:js": "eslint ./src/",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint": "npm run copy && npm run lint:js && npm run lint:css",
    "build-css": "node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/ --watch --recursive",
    "start-js": "node scripts/start.js",
    "start": "npm run copy && npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "npm run copy && npm-run-all build-css build-js",
    "test": "npm run lint && node scripts/test.js --env=jsdom"
  },
  "dependencies": {
    "@oceanprotocol/art": "^1.0.2",
    "@oceanprotocol/keeper-contracts": "^0.0.24",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "bigchaindb-orm": "^2.0.0",
    "bip39": "^2.5.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "connected-react-router": "^4.3.0",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "elliptic": "^6.4.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "eth-crypto": "^1.2.3",
    "ethereumjs-util": "^5.2.0",
    "ethers": "^3.0.26",
    "extract-text-webpack-plugin": "3.0.2",
    "fetch-download": "^1.1.1",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "history": "^4.7.2",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "js-sha3": "^0.7.0",
    "jsonwebtoken": "^8.3.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "prop-types": "^15.6.1",
    "raf": "3.4.0",
    "react": "^16.4.0",
    "react-blockies": "^1.3.0",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.4.0",
    "react-modal": "^3.5.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.0.0",
    "react-truncate": "^2.3.0",
    "react-vis": "^1.10.4",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-form": "^7.3.0",
    "redux-thunk": "^2.3.0",
    "resolve": "1.6.0",
    "secp256k1": "^3.5.0",
    "sha3": "^1.2.2",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "truffle-contract": "^3.0.5",
    "url-loader": "0.6.2",
    "util.promisify": "^1.0.0",
    "uuid": "^3.3.2",
    "web3": "0.20.6",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "eslint": "^5.2.0",
    "eslint-config-oceanprotocol": "^1.0.7",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.2",
    "stylelint": "^9.4.0",
    "stylelint-config-bigchaindb": "^1.1.3",
    "stylelint-config-standard": "^18.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
