{
  "name": "@oceanprotocol/pleuston",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "lint:js": "eslint ./src/",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "build-css": "node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/ --watch --recursive",
    "start-js": "node scripts/start.js",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "npm-run-all build-css build-js",
    "test": "npm run lint && node scripts/test.js --env=jsdom --coverage"
  },
  "dependencies": {
    "@oceanprotocol/art": "^1.0.2",
    "@oceanprotocol/keeper-contracts": "^0.1.0",
    "bip39": "^2.5.0",
    "chalk": "^2.4.1",
    "classnames": "^2.2.6",
    "connected-react-router": "^4.4.1",
    "dotenv": "^6.0.0",
    "dotenv-expand": "^4.2.0",
    "elliptic": "^6.4.1",
    "eth-crypto": "^1.2.3",
    "ethereumjs-util": "^5.2.0",
    "ethers": "^3.0.26",
    "fetch-download": "^1.1.1",
    "fs-extra": "^7.0.0",
    "history": "^4.7.2",
    "jsonwebtoken": "^8.3.0",
    "object-assign": "^4.1.1",
    "promise": "^8.0.1",
    "prop-types": "^15.6.2",
    "raf": "^3.4.0",
    "react": "^16.4.2",
    "react-blockies": "^1.3.0",
    "react-dom": "^16.4.2",
    "react-modal": "^3.5.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.0.0",
    "react-truncate": "^2.4.0",
    "react-vis": "^1.10.5",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-form": "^7.4.2",
    "redux-thunk": "^2.3.0",
    "resolve": "^1.8.1",
    "secp256k1": "^3.5.2",
    "truffle-contract": "^3.0.6",
    "util.promisify": "^1.0.0",
    "uuid": "^3.3.2",
    "web3": "0.20.7",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "css-loader": "^0.28.11",
    "eslint": "^5.4.0",
    "eslint-config-oceanprotocol": "^1.0.7",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "react-dev-utils": "^5.0.1",
    "style-loader": "^0.22.1",
    "stylelint": "^9.5.0",
    "stylelint-config-bigchaindb": "^1.2.1",
    "stylelint-config-standard": "^18.2.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.11.2",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  }
}
