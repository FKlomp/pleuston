{
  "name": "plankton-frontend",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "lint:js": "eslint ./{src,public}/**/*.js",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "build-css": "node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path src/assets/stylesheets/ src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "npm run lint && react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@oceanprotocol/art": "^1.0.2",
    "@oceanprotocol/keeper-contracts": "0.0.6",
    "bigchaindb-orm": "^2.0.0",
    "bip39": "^2.5.0",
    "classnames": "^2.2.5",
    "connected-react-router": "^4.3.0",
    "history": "^4.7.2",
    "js-sha3": "^0.7.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-blockies": "^1.3.0",
    "react-dom": "^16.4.0",
    "react-modal": "^3.4.5",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-select": "next",
    "react-vis": "^1.9.4",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-form": "^7.3.0",
    "redux-thunk": "^2.3.0",
    "sha3": "^1.2.2",
    "truffle-contract": "^3.0.5",
    "util.promisify": "^1.0.0",
    "web3": "^0.20.6"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.19.1",
    "eslint-config-ascribe-react": "^2.0.4",
    "eslint-plugin-flowtype": "^2.49.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "node-sass-chokidar": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "stylelint": "^9.2.1",
    "stylelint-config-bigchaindb": "^1.1.3",
    "stylelint-config-standard": "^18.2.0"
  }
}
